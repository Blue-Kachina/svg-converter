APP_NAME="SVG Converter"
APP_ENV=production
APP_KEY=
APP_DEBUG=false
APP_URL=http://localhost

LOG_CHANNEL=stderr
LOG_LEVEL=info

# Octane / FrankenPHP
OCTANE_SERVER=frankenphp
OCTANE_WORKERS=4
OCTANE_MAX_REQUESTS=250

# Cache / Queue
CACHE_DRIVER=file
QUEUE_CONNECTION=sync
SESSION_DRIVER=file
SESSION_LIFETIME=120

# Database (default to SQLite; change for MySQL/Postgres if needed)
DB_CONNECTION=sqlite
DB_DATABASE=database/database.sqlite

# Metrics configuration (see config/metrics.php)
METRICS_ENABLED=true
METRICS_EXPOSE=false
# Optional: basic auth in format "user:pass" (use HTTPS)
METRICS_BASIC_AUTH=
METRICS_ALERTS_CONSECUTIVE_FAILURES=10
METRICS_ALERTS_COOLDOWN=300

# SVG constraints (see config/svg.php)
SVG_MAX_BYTES=1048576
SVG_MAX_PNG_BYTES=5242880
SVG_OVERSIZE_STRATEGY=shrink_quality
SVG_MAX_WIDTH=4096
SVG_MAX_HEIGHT=4096
SVG_ALLOW_REMOTE_REFS=false

# Conversion tuning
SVG_CONVERSION_DENSITY=144
SVG_CONVERSION_BACKGROUND=transparent
SVG_CONVERSION_QUALITY=90

# CORS (if applicable; see your CORS middleware/config)
CORS_ALLOWED_ORIGINS=*
CORS_SUPPORTS_CREDENTIALS=false
