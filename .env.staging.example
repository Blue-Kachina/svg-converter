APP_NAME="SVG Converter (Staging)"
APP_ENV=staging
APP_KEY=
APP_DEBUG=false
APP_URL=http://localhost:8081

LOG_CHANNEL=stderr
LOG_LEVEL=info

# Octane / FrankenPHP
OCTANE_SERVER=frankenphp
OCTANE_WORKERS=2
OCTANE_MAX_REQUESTS=250

# Cache / Queue (Redis in staging)
CACHE_STORE=redis
QUEUE_CONNECTION=redis
SESSION_DRIVER=redis
SESSION_LIFETIME=120
REDIS_CLIENT=phpredis
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=null

# Database (default to SQLite)
DB_CONNECTION=sqlite
DB_DATABASE=database/database.sqlite

# Metrics configuration (see config/metrics.php)
METRICS_ENABLED=true
METRICS_EXPOSE=true
# Optional: basic auth in format "user:pass" (use HTTPS)
METRICS_BASIC_AUTH=
METRICS_ALERTS_CONSECUTIVE_FAILURES=10
METRICS_ALERTS_COOLDOWN=120

# SVG constraints (see config/svg.php)
SVG_MAX_BYTES=1048576
SVG_MAX_PNG_BYTES=5242880
SVG_OVERSIZE_STRATEGY=shrink_quality
SVG_MAX_WIDTH=4096
SVG_MAX_HEIGHT=4096
SVG_ALLOW_REMOTE_REFS=false

# Conversion tuning
SVG_CONVERSION_DENSITY=144
SVG_CONVERSION_BACKGROUND=transparent
SVG_CONVERSION_QUALITY=90

# CORS (if applicable; see your CORS middleware/config)
CORS_ALLOWED_ORIGINS=*
CORS_SUPPORTS_CREDENTIALS=false
